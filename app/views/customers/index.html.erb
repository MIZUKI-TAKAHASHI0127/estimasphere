<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h3 class="mb-4">顧客一覧</h3>
      <%= form_with(url: customers_path, method: :get, local: true, class: "form-inline my-2 my-lg-0") do %>
        <%= text_field_tag :search, nil, class: "form-control mr-sm-2", placeholder: "会社名で検索" %>
        <%= submit_tag "検  索", name: nil, class: "btn btn-outline-success my-2 my-sm-0" %>
        <%= link_to 'リセット', customers_path, class: 'btn btn-outline-secondary ml-2' %>
      <% end %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <table class="table table-hover">
        <thead class="thead-dark">
          <tr>
            <th scope="col" style="width: 10%;">会社ID</th>
            <th scope="col" style="width: 75%;">会社名</th>
            <th scope="col" style="width: 15%;">顧客コード</th>
            
            
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td class="text-right"><%= customer.id %></td>
              <td><%= link_to customer.customer_name, customer_path(customer) %></td>
              <td><%= customer.customer_code %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= paginate @customers %>
  </div>
</div>