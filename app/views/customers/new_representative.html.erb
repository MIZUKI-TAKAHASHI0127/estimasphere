<h3>担当者を追加</h3>

<%= form_with model: [@customer, Representative.new], url: customer_representatives_path(@customer), local: true do |form| %>
  <div class="form-group">
    <%= form.label :department_name %>
    <%= form.text_field :department_name, class: "form-control", placeholder: "部署名" %>
  </div>
  <div class="form-group">
    <%= form.label :representative_name %>
    <%= form.text_field :representative_name, class: "form-control", placeholder: "担当者名" %>
  </div>
  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: "form-control", placeholder: "電話番号" %>
  </div>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <div class="d-flex justify-content-center">
    <%= form.submit "担当者を追加", class: "btn btn-primary" %>
  </div>
<% end %>